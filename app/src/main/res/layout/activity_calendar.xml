<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tecsup.jeferson.calendarapp.CalendarActivity"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/escribe_la_fecha"
        android:textSize="20dp"
        android:textStyle="bold"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/edt_fecha"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:textSize="20dp"
            android:layout_marginTop="25dp"
            android:text="Aqui va la fecha"
            android:textColor="@android:color/darker_gray"/>

        <Button
            android:id="@+id/btn_buscar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buscar"
            android:layout_marginTop="10dp"
            android:layout_alignParentEnd="true"
            android:layout_alignEnd="@+id/edt_fecha"
            android:onClick="mostrarCalender"/>

    </RelativeLayout>

    <!--CalendarView
        android:id="@+id/btn_fecha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"></CalendarView-->

</LinearLayout>
